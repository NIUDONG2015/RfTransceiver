<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/img_rainbow_above"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_creat_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="一人建组"
        android:textSize="20dp"
        android:paddingLeft="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/img_rainbow_above"/>

    <TextView
        android:id="@+id/tv_creat_group_right"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="40dp"
        android:text="多人加入"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/img_rainbow_above"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:id="@+id/tv_label_add"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/view_center_line"
        android:layout_marginBottom="40dp"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:paddingStart="0dp"
        android:id="@+id/tv_label_create"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_label_add"
        android:layout_marginBottom="15dp"
        android:visibility="invisible"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_center_line"
        android:layout_below="@id/img_rainbow_above"
        android:background="@android:color/transparent"/>


    <include layout="@layout/view_limit_et"
        android:id="@+id/include_et_limit_groupname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/view_center_line"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/btn_sure_set_group_name"
        android:background="@drawable/tv_sure"
        android:layout_below="@+id/include_et_limit_groupname"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@+id/include_et_limit_groupname"
        android:layout_alignEnd="@+id/include_et_limit_groupname"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/sure"
        android:textColor="@color/white"/>

</RelativeLayout>