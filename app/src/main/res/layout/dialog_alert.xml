<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/corner_with_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_message_alert"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sure_alert"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_message_alert"
        android:background="@drawable/tv_alert_bg"
        android:text="@string/sure"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cancel_alert"
        android:layout_alignBottom="@+id/tv_sure_alert"
        android:layout_toStartOf="@+id/tv_sure_alert"
        android:layout_marginEnd="10dp"
        android:background="@drawable/tv_alert_bg"
        android:text="@string/cancel"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/black"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_sure_alert"/>



</RelativeLayout>