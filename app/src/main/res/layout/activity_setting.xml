<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rl_top_setting"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/dark_blue"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/img_back_setting"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:padding="10dp"
            android:background="@drawable/img_top_home_bg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_back_setting"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:id="@+id/tv_title_setting"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_container_setting"
        android:layout_below="@+id/rl_top_setting"/>

</RelativeLayout>