<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <include layout="@layout/view_loading"
        android:id="@+id/rl_loading_dialog_bluetooth_connect"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/start_search"
        android:id="@+id/btn_cancel_discovery"
        android:layout_alignBottom="@+id/rl_loading_dialog_bluetooth_connect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/rl_loading_dialog_bluetooth_connect">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_bluetooth_devices"
            android:orientation="vertical"
            />

    </ScrollView>

</RelativeLayout>